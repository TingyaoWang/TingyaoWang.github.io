{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "The Base Map of North America Area",
    "subtitle": "Source: https://geojson-maps.ash.ms/",
    "anchor": "start",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
  },
  "width": 400,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/TingyaoWang/TingyaoWang.github.io/main/NA.geo.json",
    "format": {"property": "features"}
  },
  "projection": {"type": "mercator"},
  "mark": {
    "type": "geoshape",
    "stroke": "darkslateblue",
    "strokeWidth": 0.8,
    "fill": "lightblue"
  },
  "encoding": {"tooltip": {"field": "properties.name", "type": "nominal"}}
}