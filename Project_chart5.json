{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Figure 5: The bubble chart of the number of top-200 university, gross enrollment ratio and GDP.",
    "subtitle": [
      "GDP is in USD billion ",
      "Source: Webometrics, Our World in Data and Trading Economics."
    ],
    "fontSize": 14,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "color": "black",
    "anchor": "middle"
  },
  "height": 320,
  "width": 258,
  "config": {
    "padding": {"top": 10, "bottom": 8, "left": 8, "right": 1},
    "background": "white",
    "view": {"stroke": "transparent"}
  },
  "data": {
    "url": "https://raw.githubusercontent.com/TingyaoWang/TingyaoWang.github.io/main/University_rate_gdp.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {"type": "circle", "color": "blueviolet", "opacity": 0.7},
      "encoding": {
        "x": {
          "field": "number",
          "type": "quantitative",
          "title": "The number of top-200 universities",
          "axis": {"titleFontSize": 11, "tickMinStep": 1}
        },
        "y": {
          "field": "gdp(in USD Billion)",
          "type": "quantitative",
          "title": "gdp(in USD Billion)",
          "axis": {"titleFontSize": 11}
        },
        "size": {
          "field": "rate",
          "type": "quantitative",
          "title": "gross enrollment ratio",
          "scale": {"rangeMax": 4500},
          "legend": {
            "title": "gross enrollment ratio",
            "orient": "right",
            "labelFontSize": 9,
            "titleFontSize": 9
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "number",
            "type": "quantitative",
            "title": "number",
            "format": ".2f"
          },
          {
            "field": "gdp(in USD Billion)",
            "type": "quantitative",
            "title": "gdp(in USD Billion)",
            "format": ".0f"
          },
          {
            "field": "rate",
            "type": "quantitative",
            "title": "gross enrollment ratio",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "forestgreen"},
      "transform": [
        {
          "regression": "gdp(in USD Billion)",
          "on": "number"
        }
      ],
      "encoding": {
        "x": {
          "field": "number",
          "type": "quantitative"
        },
        "y": {
          "field": "gdp(in USD Billion)",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "gdp(in USD Billion)",
          "on": "number",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "forestgreen",
        "x": 250,
        "align": "right",
        "y": 30,
        "fontSize": 15,
        "fontWeight": "bold"
      },
      "encoding": {"text": {"type": "ordinal", "field": "R2"}}
    }
  ]
}
